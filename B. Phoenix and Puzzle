#include<bits/stdc++.h>
#define ll long long
#define vi vector<int>
#define vii vector<ll>
#define no cout<<"NO"<<endl;
#define yes cout<<"YES"<<endl;
using namespace std;
bool squary(int n)
{
    int y=sqrt(n);
    return y*y==n;
}
void solve()
{
  ll n;
  cin>>n;
  if(n%2==0 && squary(n/2))
  {
      yes;
  }
  else if(n%4==0 && squary(n/4))
  {
      yes;
  }
  else{
    no;
  }
}
int main() {
	int t;
	cin>>t;
	while(t--)
    {
        solve();
    }

	return 0;
}

